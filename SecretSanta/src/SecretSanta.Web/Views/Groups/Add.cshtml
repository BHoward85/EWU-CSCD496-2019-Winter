@model GroupUserViewModel
@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
{
    <div>@ViewBag.ErrorMessage</div>
}
<form asp-route="Add">
    <div class="field">
        <label class="label" asp-for="UserId">User Id</label>
        <div class="control">
            <input class="input" type="number" asp-for="UserId" />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="GroupId">Group Id</label>
        <div class="control">
            <input class="input" type="number" asp-for="GroupId" />
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-primary">Submit</button>
        </div>
        <div class="control">
            <button class="button is-light">Cancel</button>
        </div>
    </div>
</form>