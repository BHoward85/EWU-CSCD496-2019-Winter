<h1 class="heading">Groups</h1>
<ul>
    @foreach (var group in ViewBag.Groups)
    {
        <li>@group.Name</li>
    }
</ul>
<br />
<a asp-controller="Groups" asp-action="Add" class="button is-primary">Add Group</a>
<a asp-controller="Groups" asp-action="Edit" class="button is-primary">Edit Group</a>
<a asp-controller="Groups" asp-action="Remove" class="button is-primary">Remove Group</a>