@model GroupViewModel
@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
{
    <div>@ViewBag.ErrorMessage</div>
}
<form asp-route="Edit">
    <div class="field">
        <label class="label" asp-for="Id">Group Id</label>
        <div class="control">
            <input class="input" type="number" asp-for="Id" />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="Name">Name</label>
        <div class="control">
            <input class="input" type="text" asp-for="Name" />
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-primary">Submit</button>
        </div>
        <div class="control">
            <button class="button is-light">Cancel</button>
        </div>
    </div>
</form>