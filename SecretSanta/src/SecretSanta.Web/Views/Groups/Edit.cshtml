@model GroupViewModel

<div asp-validation-summary="All"></div>
<form asp-route="Edit">
    <input asp-for="Id" type="hidden" />
    <div class="field">
        <label class="label" asp-for="Name">Name</label>
        <div class="control">
            <input class="input" type="text" asp-for="Name" />
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-primary">Submit</button>
        </div>
        <div class="control">
            <button class="button is-light" asp-action="Index">Cancel</button>
        </div>
    </div>
</form>