@model GiftViewModel
@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
{
    <div>@ViewBag.ErrorMessage</div>
}
<div asp-validation-summary="All"></div>
<form asp-route="Edit">
    <input asp-for="Id" type="hidden" />
    <div class="field">
        <label class="label" asp-for="Title">Name</label>
        <div class="control">
            <input class="input" type="text" asp-for="Title" />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="Description">Description</label>
        <div class="control">
            <input class="input" type="text" asp-for="Description" />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="OrderOfImportance">Order Of Importance</label>
        <div class="control">
            <input class="input" type="number" asp-for="OrderOfImportance" />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="Url">Url</label>
        <div class="control">
            <input class="input" type="text" asp-for="Url" />
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-primary">Submit</button>
        </div>
        <div class="control">
            <button class="button is-light" asp-action="Index">Cancel</button>
        </div>
    </div>
</form>